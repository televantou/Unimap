<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent" >


<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Participant Information Sheet
        "
        
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="Study title:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:text="Using location based semantic web data for android application development. A research based on University of Southampton open data." />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:text="Researcher: Eirini Televantou"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:text="Please read this information carefully before deciding to take part in this research. If you are happy to participate you will be asked to sign a consent form.
        "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView5"
        android:text="What is the research about?"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:text="This is an MSc project. I am Eirini Televantou and I am currently an MSc Software engineering student in Southampton University. I have created a navigation application for Android for university campuses.  You will be using the application and when done you will be asked for feedback on the application. 
        " />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:text="Why have you been chosen?"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:text="You are a university of Southampton student and I was able to find your contact details either because you are a friend, a colleague or friend of a friend.
        " />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
       
         
        android:text="What will happen to me if I take part?"
        android:layout_below="@+id/textView9"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView10"
        
        android:layout_below="@+id/textView10"
     
        android:text="You will be using the application for a couple weeks. You should install the application on your mobile device and use it when you are at university. Furthermore we need the information of the entrances of the buildings. To get the information you will be pressing a button on the application when you arrive at your requested building.You will not be asked to access specific buildings. You should go wherever you intended to go and just sent as the information of the doors.   
        At first the application will show you path to requested buidings. When you get to the entrance of the building simply press the button “Add Door Location”, after that you will be redirected to the home page of the application.
        "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
 
        android:layout_alignParentLeft="true"
        android:text="Are there any benefits in my taking part?"
          android:layout_below="@+id/textView11"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView12"
          android:layout_below="@+id/textView12"
      
        android:text="University students will be benefited if this application succeeds and meets the students’ needs.
        "/>
<TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
 
        android:layout_alignParentLeft="true"
        android:text="Are there any risks involved?"
          android:layout_below="@+id/textView13"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView14"
          android:layout_below="@+id/textView14"
      
        android:text="No there are no risks involved. 
        " />
    
    
    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
 
        android:layout_alignParentLeft="true"
        android:text="Will my participation be confidential?"
          android:layout_below="@+id/textView15"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView16"
          android:layout_below="@+id/textView16"
      
        android:text="No personal information will be stored anywhere. The consent forms which include your names will be destroyed after the end of the project and won’t be used at any other point during the project. The corresponding questionnaire that you will answer will not include your name or other personal information.  
        " />
    
    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
 
        android:layout_alignParentLeft="true"
        android:text="What happens if I change my mind?"
          android:layout_below="@+id/textView17"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView18"
          android:layout_below="@+id/textView18"
      
        android:text="Any participants may change their mind at any time during every state of the procedure. 
        " />
    
    
      <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
 
        android:layout_alignParentLeft="true"
        android:text="What happens if something goes wrong? Or if anything bad happens during the experiment."
          android:layout_below="@+id/textView19"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView20"
          android:layout_below="@+id/textView20"
      
        android:text="Contact Dr Martina Prude if anything goes wrong:
Dr Martina Prude, Head of Research Governance (02380 595058, mad4@soton.ac.uk) 
" />
    
     <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
 
        android:layout_alignParentLeft="true"
        android:text="Where can I get more information about the experiment? Any questions on how to use the application:"
          android:layout_below="@+id/textView21"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView22"
          android:layout_below="@+id/textView22"
      
        android:text="For any more information contact:
Eirini Televantou (et4g12@soton.ac.uk)
" />
    
</LinearLayout>
</ScrollView>
