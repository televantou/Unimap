<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent" >

<LinearLayout
    android:layout_width="319dp"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

 

        <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:paddingLeft="16dp" android:paddingRight="16dp">
            <TextView android:id="@+id/q1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="19dp" android:text="Q1. Are you aware of semantic web?"/>
            <RadioGroup android:id="@+id/q1g" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <RadioButton android:id="@+id/q1y" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="28dp" android:layout_marginTop="15dp" android:text="Yes"/>
                <RadioButton android:id="@+id/q1n" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBottom="@+id/q1g" android:layout_alignRight="@+id/q3" android:text="No"/>
            </RadioGroup>
            <TextView android:id="@+id/q2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="27dp" android:text="Q2. If yes Î±re you aware of Southampton uni open data and its extend? Do you find the idea of extending it in order to be used in everyday applications interesting? Any further comments? "/>

            <EditText
                android:id="@+id/q2a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Q3. Was the application easy to use?" />

            <RadioGroup
                android:id="@+id/q3g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/q3y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/q3n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/q3"
                    android:text="No" />
            </RadioGroup>

            <TextView
                android:id="@+id/q4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Q4. Was the directions the shortest ones?" />

            <RadioGroup
                android:id="@+id/q4g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/q4y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/q4"
                    android:layout_marginTop="15dp"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/q4n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/q4y"
                    android:layout_alignBottom="@+id/q4y"
                    android:layout_alignLeft="@+id/q4"
                    android:text="No" />
            </RadioGroup>

            <TextView
                android:id="@+id/q5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Q5. Have you ever got lost within University campuses?" />

            <RadioGroup
                android:id="@+id/q5g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/q5y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/q5n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/q5y"
                    android:layout_alignBottom="@+id/q5y"
                    android:text="No" />
            </RadioGroup>

            <TextView
                android:id="@+id/q6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Q6. Please provide any feedback for the application." />

            <EditText android:layout_width="wrap_content" android:id="@+id/q6a" android:layout_height="wrap_content" android:layout_alignLeft="@+id/q6" android:layout_alignRight="@+id/q6" android:layout_below="@+id/q6" android:layout_marginTop="15dp" android:ems="10" android:inputType="textMultiLine"/>

            <Button android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignRight="@+id/q6" android:layout_below="@+id/q6a" android:layout_marginTop="20dp" android:onClick="submit" android:text="Submit"/>
        </LinearLayout>

        

        <RadioGroup
            android:id="@+id/q4g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@+id/q4"
           >

            
        </RadioGroup>

        

        <RadioGroup
            android:id="@+id/q3g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/q4"
            android:layout_below="@+id/q3" >

        </RadioGroup>

    </LinearLayout>

</ScrollView>